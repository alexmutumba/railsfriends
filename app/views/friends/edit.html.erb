<div class="card">
  <h4 class="card-header">Editing friend</h4>
  <div class="card-body">

    <%= render "form", friend: @friend %>

    <%= link_to "Show this friend", @friend, class: 'btn btn-secondary' %> 

  <%= button_to "Delete", @friend, method: :delete, data: { confirm: 'Are you sure?'}, class:"btn btn-danger btn-sm" %>

  <%= link_to "Back to friends", friends_path, class: 'btn btn-secondary' %>

    
  </div>
</div>






